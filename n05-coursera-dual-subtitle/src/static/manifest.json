{
	"manifest_version": 3,
	"name": "Coursera Dual Subtitle",
	"description": "Coursera Dual Subtitle",
	"version": "1.0.0",
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_title": "Coursera Dual Subtitle",
		"default_icon": "icon.png"
	},
	"permissions": [
		"downloads",
		"tabs",
		"storage"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.coursera.org/learn/*"
			],
			"js": [
				"contentScript.js"
			],
			"css": [
				"contentScript.css"
			],
			"run_at": "document_end",
			"all_frames": true
		}
	]
}